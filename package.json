{
  "name": "hempin-ui",
  "version": "0.1.0",
  "private": true,
  "description": "Hempin UI components and shell",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup && npm run play:build",
    "dev": "npm-run-all -p dev:playground dev:watch-lib",
    "dev:watch-lib": "tsup --watch",
    "dev:playground": "cross-env NEXT_TELEMETRY_DISABLED=1 next dev playground",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist playground/.next",
    "play:build": "cd playground && next build",
    "play:start": "cd playground && next start -p 3000",
    "lib:build": "tsup"
  },
  "dependencies": {
    "next": "14.2.5",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "clsx": "^2.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.10",
    "tsup": "^8.5.0",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": "20.x"
  }
}